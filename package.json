{
  "name": "project-a-frontend",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bunx --bun vite --open",
    "build-only": "bunx --bun vite build",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:e2e": "playwright test",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "check": "bunx steiger ./src",
    "check:watch": "bunx steiger ./src --watch",
    "format": "prettier --write src/",
    "prepare": "lefthook install",
    "clean": "rimraf dist && rimraf node_modules",
    "codegen": "bunx graphql-codegen --config src/shared/config/codegen.ts",
    "codegen:watch": "bunx graphql-codegen --config src/shared/config/codegen.ts --watch",
    "dep-cruiser:preview": "bunx depcruise src --include-only \"^src\" --output-type dot | dot -T svg > dependency-graph-preview.svg",
    "segments:generate": "bunx fsd",
    "release": "bunx semantic-release"
  },
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0 <23.0.0"
  },
  "dependencies": {
    "@apollo/client": "^3.13.8",
    "@eslint/compat": "^1.2.8",
    "@feature-sliced/cli": "^1.0.0",
    "@feature-sliced/filesystem": "^3.0.1",
    "@unhead/vue": "^2.0.8",
    "class-variance-authority": "^0.7.1",
    "classnames": "^2.5.1",
    "clsx": "^2.1.1",
    "graphql": "^16.11.0",
    "graphql-tag": "^2.12.6",
    "lucide-vue-next": "^0.503.0",
    "pinia": "^3.0.2",
    "rimraf": "^6.0.1",
    "reka-ui": "^2.2.0",
    "tailwind-merge": "^3.2.0",
    "tw-animate-css": "^1.2.8",
    "vue": "^3.5.13",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@feature-sliced/eslint-config": "^0.1.1",
    "@feature-sliced/steiger-plugin": "^0.5.5",
    "@graphql-codegen/cli": "^5.0.5",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-codegen/typescript-operations": "^4.6.0",
    "@graphql-codegen/typescript-vue-apollo": "^4.1.1",
    "@playwright/test": "^1.52.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.2",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@tailwindcss/vite": "^4.1.4",
    "@tsconfig/node22": "^22.0.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.15.2",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vitejs/plugin-vue-jsx": "^4.1.2",
    "@vitest/eslint-plugin": "1.1.43",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "dependency-cruiser": "^16.10.1",
    "eslint": "^9.25.1",
    "eslint-plugin-boundaries": "^5.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-vue": "^10.0.0",
    "jiti": "^2.4.2",
    "jsdom": "^26.1.0",
    "lefthook": "^1.11.11",
    "lint-staged": "^15.5.1",
    "npm-run-all2": "^7.0.2",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.3",
    "semantic-release-github-pullrequest": "^1.3.0",
    "tailwindcss": "^4.1.4",
    "typescript": "~5.8.3",
    "url-join": "^5.0.0",
    "vite": "^6.3.3",
    "vite-plugin-svg-icons": "^2.0.1",
    "vite-plugin-vue-devtools": "^7.7.5",
    "vitest": "^3.1.2",
    "vue-tsc": "^2.2.10"
  }
}
