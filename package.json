{
  "name": "project-a",
  "private": true,
  "type": "module",
  "engines": {
    "pnpm": "10.8.1",
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "vite --open",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview",
    "https-preview": "serve dist",
    "serve": "vite preview",
    "start": "vite",
    "fmt": "biome format .",
    "fmt:fix": "biome format --write .",
    "lint": "biome lint --error-on-warnings --write .",
    "check": "biome check .",
    "check:fix": "biome check --write --unsafe .",
    "biome:check": "pnpm fmt && pnpm lint && pnpm check",
    "generate-routes": "tsr generate",
    "watch-routes": "tsr watch",
    "prepare": "lefthook install && npx -y only-allow pnpm"
  },
  "dependencies": {
    "@tanstack/router-plugin": "^1.116.1",
    "@tanstack/solid-query": "^5.74.4",
    "@tanstack/solid-router": "^1.116.0",
    "@tanstack/solid-router-devtools": "^1.116.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "solid-js": "^1.9.5",
    "tailwind-merge": "^3.2.0",
    "tailwindcss-animate": "^1.0.7",
    "tsr": "^1.3.4",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@types/node": "^22.14.1",
    "autoprefixer": "^10.4.21",
    "lefthook": "^1.11.10",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3",
    "vite": "^6.3.2",
    "vite-plugin-solid": "^2.11.6"
  }
}
